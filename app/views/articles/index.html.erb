<h1>hello this is index page for showing all data</h1>

<h3>Listing Article</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% @article.each do |ar| %>
  <tr>
    <td><%= ar.title %></td>
    <td><%= ar.text %></td>
    <td><%= link_to ' Show ', article_path(ar) %></td>
    <td><%= link_to ' Edit ', edit_article_path(ar) %></td>
    <td><%= link_to ' Destroy ', article_path(ar), method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>

<!--    <td><%#= link_to 'My Blog', controller: 'articles' %></td>-->
  </tr>
  <% end %>
</table>
<%= link_to 'New Article', new_article_path %>